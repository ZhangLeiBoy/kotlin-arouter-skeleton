<resources>

    <style name="home_info_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="home_info_item_iv">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="home_info_line">
        <item name="android:background">@color/app_line_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>

    <style name="home_info_item_text">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/app_text_main</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="home_info_item_enter">
        <item name="android:src">@drawable/icon_entry</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
